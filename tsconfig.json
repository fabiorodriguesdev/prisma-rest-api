{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@controllers/*": ["src/controllers/*"],
      "@services/*": ["src/services/*"],
      "@routes/*": ["src/routes/*"],
      "@utils/*": ["src/utils/*"],
      "@models/*": ["src/models/*"],
      "@config/*": ["src/config/*"],
      "@generated/*": ["generated/*"],
      "@libs/*": ["src/libs/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
